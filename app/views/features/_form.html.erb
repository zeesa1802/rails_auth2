  <header class="py-5">
    <div class="container px-lg-5">
      <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
        <h1 class="display-5 fw-bold">Add Feature to <%= @project.name %> </h1>
        
          
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
     <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">


<%= form_for([@feature.project, @feature]) do |f| %>
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

      <ul>
      <% @feature.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <h4><%= f.label :feature_name %><h4>
    <%= f.text_field :feature_name, :class => "form-control" %>
  </div>
  
  <% if current_user.role == 'qa' || current_user.role == 'developer' || current_user.role == 'project_manager' %>
     <div class="d-grid dropdown ">
    <h4><%= f.label :status %></h4>
    <%= f.select :status, status,:class => "form-control" %>
  </div>
  <% end %>
  

  <div class="form-group">
    <h4><%= f.label :project %><h4>
    <%= f.text_field :project, value:@project.name,:disabled=>true,:class => "form-control" %>
  </div>
   <div>
    <%= f.submit "Cretae Feature", class: "btn btn-primary btn-lg text-uppercase fw-bold" %>
  </div>
<% end %>

      </div>
    </div>
    </div>
     </div>
     



      </div>
    </div>
  </header>